@media(max-width:960px){


  /*トップページ*/

    .top-main{
      background-image: url("<%= asset_path('segatter_background.jpg') %>");
      height:1000px;
      background-size:cover;
      padding-top:250px;
    }

    .top-message{
      text-align:center;
    }

    .top-message h1{
      font-size:45px;
      letter-spacing: 20px;
    }

    .top-message p{
      font-size:25px;
    }

    /*ホームアバウトページ*/

    .about-main{
      padding:50px 0px;
      text-align: center;
    }

    .about-main h2{
      font-size:30px;
      letter-spacing: 5px;
      padding:10px;
    }

    .about-main p{
      font-size:14px;
      padding:10px;
    }

    .about-img{
      height:350px;
    }




}

@media(max-width:560px){

   /*共通レイアウト*/
   html,body{
     height:100%;
   }

    .container{
      width:90%;
      margin:50px auto;
    }


  /*トップページ*/

    .top-main{
      background-image: url("<%= asset_path('segatter_background_responsive.jpg') %>");
      height:400px;
      background-size:cover;
      padding-top:200px;
    }

    .top-message{
      text-align:center;
    }

    .top-message h1{
      font-size:20px;
      letter-spacing: 8px;
    }

    .top-message p{
      font-size:15px;
    }



    /*ヘッダー*/

     header{
      height: 65px;
      padding:0 15px;
     }

     .header-logo{
       float:left;
     }

     .header-logo a{
       color:white;
       font-size:20px;
       line-height: 65px;
     }




     /*ホームアバウトページ*/

     .about-main{
       padding:40px 0px;
       text-align: center;
     }

     .about-main h2{
       font-size:20px;
       letter-spacing: 5px;
       padding:10px;
     }

     .about-main p{
       font-size:15px;
       margin: 0 71px;
     }

     .about-img{
       height:200px;
     }

     /* フォーム */
     .form-heading{
       font-size:25px;
     }



}
