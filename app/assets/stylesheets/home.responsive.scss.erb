@media(max-width:960px){
  /*リセット*/
  *{
    margin:0;
    padding:0;
  }

  /*共通レイアウト*/
    body{
      background-color: #EEEEEE;
      color:white;
      opacity:0.9;
    }

    .main{
      /*以下の記述は模写。ヘイト・ウィズについて詳しく勉強必要。*/
      position:absolute;
      top:65px;
      background-color: #EEEEEE;
      width:100%;
      height:100%;
      min-height: 100%;
      padding-top:30px;
    }

    .container{
      width:90%;
      margin:50px auto;
    }

    li{
      list-style: none;
    }

    a{
      text-decoration: none;
      cursor: pointer;
    }

    .main a:link , .main a:visited{
      color: #555555;
    }

    .main a:hover{
      color:rgba(0, 51, 0, 1)
    }

    input {
       float:right;
       background-color:rgba(0, 51, 0, 1);
       font-size:30px;
       color:white;
       cursor:pointer;
     }

     /*ヘッダー*/

     /* pc用レイアウト削除 */
     #header-list{
       display:none;
     }

      header{
       height: 65px;
       padding:0 20px;
       background-color: rgba(0, 51, 0, 0.9)
      }

      .header-logo{
        float:left;
        display:inline-block;
      }

      .header-logo a{
        color:white;
        font-size:25px;
        line-height: 65px;
      }

      .header-verinfo{
        float:left;
        display:inline-block;
      }

      .header-verinfo a{
        color:white;
        font-size:16px;
        line-height: 65px;
        padding: 0 20px;
      }


      .header-menus a{
        display: block;
        font-size:20px;
        font-weight: 200;
        line-height:65px;
        box-shadow: 0 2px 6px #c1ced7;
        padding:0 20px;
        cursor:pointer
      }

      .header-menus a:link,  .header-menus a:visited{
        color:rgba(0, 51, 0, 1);
      }

      .header-menus a:hover{
         background-color: rgba(0, 51, 0, 0.5);
      }

      .header-menus li{
        float:left;
        width:100%;
        background-color:#F0FFF0;
      }

     .drawer-menus{
       text-align:center;
       padding:20px;
       color:#2F4F4F;
     }


  /*トップページ*/

    .top-main{
      background-image: url("<%= asset_path('segatter_background.jpg') %>");
      height:1000px;
      background-size:cover;
      padding-top:250px;
    }

    .top-message{
      text-align:center;
    }

    .top-message h1{
      font-size:45px;
      letter-spacing: 20px;
    }

    .top-message p{
      font-size:25px;
    }

    /*ホームアバウトページ*/

    .about-main{
      height:750px;
      padding:50px 0px;
      text-align: center;
      background-color: rgba(0, 51, 0, 0.9)
    }

    .about-main h2{
      font-size:30px;
      letter-spacing: 5px;
      padding:10px;
    }

    .about-main p{
      font-size:14px;
      letter-spacing: 2px;
      padding:10px;
    }

    .about-img{
      height:350px;
      display: block;
      margin:0 auto;
    }

    /*ver ページ*/

    .verinfo-main{
      padding:100px 0px;
      text-align: center;
      height:100%;
      background-color: rgba(0, 51, 0, 0.9)
    }

    .verinfo-main h2{
      font-size:45px;
      letter-spacing: 8px;
      padding:15px;
    }

    .verinfo-main p{
      font-size:20px;
      letter-spacing: 2px;
      padding:15px;
    }

    .verinfo-img{
      width:550px;
      display: block;
      margin:0 auto;
    }

    .verinfo-link{
      line-height: 45px;
      display: inline-block;
    }

    .verinfo-link a{
      font-size:30px;
    }

    .verinfo-link a:link,  .verinfo-link a:visited{
      color:#555555;
    }

    .verinfo-link a:hover{
       color: rgba(0, 51, 0, 1);
    }

    .verinfo-created-at{
      float:right;
      line-height: 45px;
      display: inline-block;
    }

    /*　フォーム　*/

    .form {
      max-width: 600px;
      margin: 0 auto;
      background-color: white;
      box-shadow: 0 2px 6px #c1ced7;
    }


    .form-body {
      padding: 30px;
    }

    .form-heading{
      text-align: center;
      font-size:40px;
      color:#555555;
    }

    .form-error {
      color: #ff4d75;
    }

        /* メモ：ずっと解決できなかったinputとtextareaの幅が親要素内で100％にならなかった
        のは、paddingを設定してたからだった。iuputとtextareaにpaddingを
        設定するの禁止！！ */

    .form input {
      width: 100%;
      border: 1px solid #d8dadf;
      background-color: white;
      color: #57575f;
      font-size: 25px;
      letter-spacing: 2px;
      border-radius: 2px;
    }

    .form textarea {
      width: 100%;
      min-height: 110px;
      font-size: 16px;
      letter-spacing: 2px;
      /*下記記述で初期設定の右下のリサイズのところリセットできるらしい。*/
      resize: none;
    }

    .form input[type="submit"] {
      background-color:rgba(0, 51, 0, 0.9) ;
      color: white;
      cursor: pointer;
      font-weight: 300;
      width: 120px;
      font-size:15px;
      line-height: 40px;
      border-radius: 2px;
      margin-top: 8px;
      margin-bottom: 0;
      float: right;
    }

      /*下記全く意味わからないが、コピペしたら、うまく入った。調べる。*/
    .form-body:after {
      content: '';
      display: table;
      clear: both;
    }


    /* フラッシュ */
    .flash {
      padding: 10px 0;
      color: white;
      background: rgb(251, 170, 88);
      text-align: center;
      position: absolute;
      top: 65px;
      z-index: 10;
      width: 100%;
      border-radius: 0 0 2px 2px;
      font-size: 14px;
    }

    /*ハンバーガーメニュー*/

    #nav-drawer {
      position: relative;
    }

    /*チェックボックス等は非表示に*/
    .nav-unshown {
      display:none;
    }

    /*アイコンのスペース*/
    #nav-open {
      width: 20px;
      height: 20px;
      float:right;
      position:relative;
    }

    /*ハンバーガーアイコン Fontawesome*/

    .header-menus .fa{
      font-size:40px !important;
      position:absolute;
      top:10px;
      right:0px;

    }

    .fa-bars {
      cursor: pointer;
    }



    /*閉じる用の薄黒カバー*/
    #nav-close {
      display: none;/*はじめは隠しておく*/
      position: fixed;
      z-index: 99;
      top: 0;/*全体に広がるように*/
      left: 0;
      width: 100%;
      height: 100%;
      background: black;
      opacity: 0;
      transition: .3s ease-in-out;
    }

    /*中身*/
    #nav-content {
      overflow: auto;
      position: fixed;
      top: 0;
      right: 0;
      z-index: 9999;/*最前面に*/
      width: 90%;/*右側に隙間を作る（閉じるカバーを表示）*/
      max-width: 200px;/*最大幅（調整してください）*/
      height: 100%;
      background: #F5F5F5;/*背景色*/
      transition: .3s ease-in-out;/*滑らかに表示*/
      -webkit-transform: translateX(-105%);
      transform: translateX(105%);/*左に隠しておく*/
    }


    /*チェックが入ったらもろもろ表示*/
    #nav-input:checked ~ #nav-close {
      display: block;/*カバーを表示*/
      opacity: 0.5;
    }

    #nav-input:checked ~ #nav-content {
      -webkit-transform: translateX(0%);
      transform: translateX(0%);/*中身を表示（左へスライド）*/
      box-shadow: 6px 0 25px rgba(0,0,0,.15);
    }

    /*ページネーションのデザイン*/

    .pagination{
      margin-top:10px;
      height:40px;
      text-align:center;
    }

    .pagination a,
    .pagination span{
      line-height:40px;
      font-weight: 600;
      font-size:30px;
      margin:0 10px;
      color: #006600;
    }


}

