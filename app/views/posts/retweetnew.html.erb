<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">投稿する</h1>

    <%= form_tag("/posts/create") do %>
      <div class="form">
        <div class="form-body">

          <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>

          <textarea name="content">引用:<%= @retweetUser.name %>「<%= @retweet.content %>」>>>&#13;&#13;</textarea>
          <input type="submit" value="投稿">
        </div>
      </div>
    <% end %>

    <div class="return return-btn">
      <%= link_to("戻る", "/posts/#{params[:id]}") %>
    </div>
  </div>
</div>
